{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/refresh-data/route.ts": {
      "maxDuration": 60
    },
    "app/api/static-data/route.ts": {
      "maxDuration": 10
    },
    "app/api/github-activity/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/static-data",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=60"
        }
      ]
    }
  ]
}